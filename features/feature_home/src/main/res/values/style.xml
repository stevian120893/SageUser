    <declare-styleable name="CustomTabLayout">
        <attr name="tab_mode" format="enum">
            <enum name="equal" value="0" />
            <enum name="stickySide" value="1" />
            <enum name="wrap" value="2" />
        </attr>
    </declare-styleable>

    <style name="TextViewTabTextAppearance">
        <item name="android:fontFamily">@font/font_poppins_medium</item>
