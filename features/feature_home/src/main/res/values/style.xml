        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorControlNormal">@color/colorGrayLine</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="AppTheme">
        <item name="android:colorControlNormal">@color/colorGrayLine</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fontFamily">@font/font_poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlockingDialogTheme" parent="Theme.MaterialComponents.Dialog">
