<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ResourceName"
        android:background="@color/activity_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/product_detail"
                style="@style/SemiBold18" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:scaleType="centerCrop"
                android:background="@color/colorGray1"/>

            <RelativeLayout
                android:id="@+id/llMerchantInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_below="@+id/ivProduct"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_16sdp">
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Product"
                    style="@style/SemiBold18"/>
                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5/5"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_star_rate"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_2sdp"
                    style="@style/SemiBold12"/>

                <LinearLayout
                    android:id="@+id/llFirstDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_below="@+id/tvProductName"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rp1.000.000"
                        android:drawableStart="@drawable/ic_money"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="08:00 - 17:00"
                        android:drawableStart="@drawable/ic_time"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Jakarta Barat"
                        android:drawableStart="@drawable/ic_location"
                        android:gravity="center_vertical"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSecondDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_below="@+id/llFirstDetail"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_6sdp">
                    <TextView
                        android:id="@+id/tvServiceUsed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="17x Terpakai"
                        android:drawableStart="@drawable/ic_service_used"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvYearsService"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="7 tahun"
                        android:drawableStart="@drawable/ic_mechanic"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvContactUs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Hubungi kami"
                        android:drawableStart="@drawable/ic_contact"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        style="@style/Medium12"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llMerchantInfo"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_16sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/merchant_name"
                    style="@style/SemiBold18"/>
                <TextView
                    android:id="@+id/tvMerchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginTop="@dimen/_3sdp"
                    style="@style/Regular12Gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:layout_marginTop="@dimen/_12sdp"
                    style="@style/SemiBold18"/>
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginTop="@dimen/_3sdp"
                    style="@style/Regular12Gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment"
                    android:layout_marginTop="@dimen/_12sdp"
                    style="@style/SemiBold18"/>
                <TextView
                    android:id="@+id/tvPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginTop="@dimen/_3sdp"
                    style="@style/Regular12Gray"/>
            </LinearLayout>

            <Button
                android:id="@+id/btLogin"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llDescription"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/bg_rounded_6"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/order" />

            <TextView
                android:id="@+id/tvNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shared_res_no_data"
                android:gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="gone"/>
        </RelativeLayout>

        <!--Shimmer-->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sflProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_duration="1500"
            android:layout_marginTop="@dimen/_16sdp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/shimmer_list" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>
</ScrollView>