            android:layout_toRightOf="@+id/etClosedHourFriday"/>

        <TextView
            android:id="@+id/textSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shared_res_saturday"
            android:layout_below="@+id/etOpenHourFriday"
            android:layout_marginTop="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/etOpenHourSaturday"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:hint="@string/open_hour"
            style="@style/Regular14"
            android:focusable="false"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@+id/textSaturday"/>
        <EditText
            android:id="@+id/etClosedHourSaturday"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:hint="@string/closed_hour"
            style="@style/Regular14"
            android:focusable="false"
            android:layout_toRightOf="@+id/etOpenHourSaturday"
            android:layout_marginTop="@dimen/_4sdp"
