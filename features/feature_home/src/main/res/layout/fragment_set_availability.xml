            android:layout_height="wrap_content"
            android:layout_below="@+id/textTuesday"
            android:text="@string/shared_res_open"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/etClosedHourTuesday"/>

        <TextView
            android:id="@+id/textWednesday"
