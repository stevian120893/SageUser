            android:layout_below="@+id/textSaturday"/>
        <CheckBox
            android:id="@+id/cbSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSaturday"
            android:text="@string/shared_res_open"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/etClosedHourSaturday"/>

        <Button
            android:id="@+id/btSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/shared_res_save"
            style="@style/ButtonText"
            android:layout_below="@+id/etOpenHourSaturday"
            android:layout_marginTop="@dimen/_30sdp"/>

    </RelativeLayout>
</ScrollView>