            style="@style/Regular14"
            android:focusable="false"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@+id/textWednesday"/>
        <EditText
            android:id="@+id/etClosedHourWednesday"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:hint="@string/closed_hour"
            style="@style/Regular14"
            android:focusable="false"
            android:layout_toRightOf="@+id/etOpenHourWednesday"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_below="@+id/textWednesday"/>
        <CheckBox
            android:id="@+id/cbWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textWednesday"
            android:text="@string/shared_res_open"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/etClosedHourWednesday"/>

        <TextView
            android:id="@+id/textThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shared_res_thursday"
            android:layout_below="@+id/etOpenHourWednesday"
            android:layout_marginTop="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/etOpenHourThursday"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:hint="@string/open_hour"
            style="@style/Regular14"
            android:focusable="false"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@+id/textThursday"/>
        <EditText
            android:id="@+id/etClosedHourThursday"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:hint="@string/closed_hour"
