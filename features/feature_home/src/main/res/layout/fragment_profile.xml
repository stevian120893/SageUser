<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_icon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Regular10Gray"
            android:text="@string/profile_referral_code"
            android:layout_marginTop="@dimen/_16sdp"/>
        <TextView
            android:id="@+id/tvReferralCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SemiBold20"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableRight="@drawable/ic_copy"
            android:drawableTint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Regular10Gray"
            android:text="@string/profile_tier_name"
            android:layout_marginTop="@dimen/_8sdp"/>
        <TextView
            android:id="@+id/tvTierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Medium14"
            android:layout_marginTop="@dimen/_3sdp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shared_res_name"
            style="@style/Regular14"
            android:layout_marginTop="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shared_res_location"
            style="@style/Regular14"
            android:enabled="false"
            android:layout_marginTop="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/etBankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_bank_name"
            style="@style/Regular14"
            android:enabled="false"
            android:layout_marginTop="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/etBankAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_bank_account_number"
            style="@style/Regular14"
            android:enabled="false"
            android:layout_marginTop="@dimen/_8sdp"/>

        <CheckBox
            android:id="@+id/cbAcceptCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_accept_cash"
            android:layout_marginTop="@dimen/_8sdp"/>

        <CheckBox
            android:id="@+id/cbAcceptBankTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_accept_bank_transfer"
            android:layout_marginTop="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_upload_profile_picture"
                style="@style/SemiBold20"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayLine"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/ivAddPhotoProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp">

            <TextView
                style="@style/SemiBold20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_ktp_picture" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayLine"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/ivAddPhotoKtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_ktp_picture_person"
                style="@style/SemiBold20"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayLine"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/ivAddPhotoKtpPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_photo"/>
        </LinearLayout>

        <Button
            android:id="@+id/btSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/shared_res_save"
            style="@style/ButtonText"
            android:layout_marginTop="@dimen/_30sdp"/>
    </LinearLayout>
</ScrollView>