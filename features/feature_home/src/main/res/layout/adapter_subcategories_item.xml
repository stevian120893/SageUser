<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAdapterParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_4sdp">

    <TextView
        android:id="@+id/textSubcategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Regular12Gray"
        android:text="@string/subcategory_name"/>

    <TextView
        android:id="@+id/tvSubcategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Medium14"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_below="@+id/textSubcategoryName"/>

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_rounded_6"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_edit"
        android:padding="@dimen/_4sdp"/>

</RelativeLayout>