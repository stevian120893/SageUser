<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAdapterParent"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_6"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp">
    <ImageView
        android:id="@+id/ivSubcategory"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_rounded_6"
        android:backgroundTint="@color/color_bg_gray"
        android:padding="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvSubcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Regular12"
        android:text="@string/subcategory_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:layout_below="@+id/ivSubcategory"/>
</RelativeLayout>