<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_logo_sage"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_add_category"
            style="@style/Regular14White"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_24sdp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:visibility="gone"
            android:drawableTint="@color/white"/>

        <Button
            android:id="@+id/btAddSubcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_add_subcategory"
            style="@style/Regular14White"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:visibility="gone"
            android:drawableTint="@color/white"/>

        <Button
            android:id="@+id/btSetAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_set_availability"
            style="@style/Regular14White"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:drawableTint="@color/white"/>

        <Button
            android:id="@+id/btAddEditProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_add_edit_product"
            style="@style/Regular14White"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:drawableTint="@color/white"/>

        <Button
            android:id="@+id/btAddEditPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_add_edit_promo"
            style="@style/Regular14White"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:drawableTint="@color/white"/>
    </LinearLayout>
</ScrollView>