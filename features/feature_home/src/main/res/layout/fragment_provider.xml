<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_icon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/etYearsOfExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/years_of_experience"
            style="@style/Regular14"
            android:inputType="number"
            android:layout_marginTop="@dimen/_16sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular14"
            android:text="@string/is_accept_cash"
            android:layout_marginTop="@dimen/_8sdp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_4sdp">
            <RadioButton
                android:id="@+id/optionAcceptCashYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shared_res_yes"/>
            <RadioButton
                android:id="@+id/optionAcceptCashNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shared_res_no"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular14"
            android:text="@string/is_accept_bank_transfer"
            android:layout_marginTop="@dimen/_8sdp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_4sdp">
            <RadioButton
                android:id="@+id/optionBankTransferYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shared_res_yes"/>
            <RadioButton
                android:id="@+id/optionBankTransferNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shared_res_no"/>
        </RadioGroup>

        <Button
            android:id="@+id/btSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/shared_res_save"
            style="@style/ButtonText"
            android:layout_marginTop="@dimen/_30sdp"/>
    </LinearLayout>
</ScrollView>