<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_icon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular12"
            android:text="@string/subscription_info"
            android:layout_marginTop="@dimen/_30sdp"/>

        <TextView
            android:id="@+id/tvSubscriptionExpiredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular14Gray"
            android:text="@string/subscription_expired_date"
            android:layout_marginTop="@dimen/_8sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayLine"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/tvChooseSubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular12"
            android:text="@string/choose_subscription"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_stroke_6"
            android:backgroundTint="@color/textColorGray"
            android:layout_marginTop="@dimen/_8sdp">
            <Spinner
                android:id="@+id/snSubscriptionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Regular14"
                android:padding="@dimen/_8sdp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular12"
            android:text="@string/bank_info"
            android:layout_marginTop="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/tvBankInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular14Gray"
            android:layout_marginTop="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/etReferralCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subscription_referral_code"
            style="@style/Regular14"
            android:inputType="textCapSentences"
            android:layout_marginTop="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_8sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_payment_proof"
                style="@style/SemiBold20"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayLine"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/ivAddPaymentProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_photo"/>
        </LinearLayout>

        <Button
            android:id="@+id/btBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_6"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/shared_res_send"
            style="@style/ButtonText"
            android:layout_marginTop="@dimen/_24sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular12"
            android:text="@string/subscription_list"
            android:layout_marginTop="@dimen/_24sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubscriptionOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:clipToPadding="false"/>
        <TextView
            android:id="@+id/tvNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shared_res_no_data"
            android:gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>